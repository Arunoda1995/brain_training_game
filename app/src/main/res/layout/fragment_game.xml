<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_easy"
    android:paddingBottom="@dimen/activity_easy_vertical_margin"
    android:paddingLeft="@dimen/activity_easy_horizontal_margin"
    android:paddingRight="@dimen/activity_easy_horizontal_margin"
    android:paddingTop="@dimen/activity_easy_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/game_fragment_back_4"
    tools:context="com.example.brain_training_game.GameFragment">


    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/correct"
        android:layout_marginStart="-98dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/my_button_bg"
        android:text="1"
        android:textColor="#ffffff"
        android:visibility="visible" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:textColor="#ffffff"
        android:background="@drawable/my_button_bg"
        android:layout_alignBaseline="@+id/b1"
        android:layout_alignBottom="@+id/b1"
        android:layout_toEndOf="@+id/b1" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b3"
        android:textColor="#ffffff"
        android:background="@drawable/my_button_bg"
        android:layout_alignBaseline="@+id/b2"
        android:layout_alignBottom="@+id/b2"
        android:layout_toEndOf="@+id/b2" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b4"
        android:textColor="#ffffff"
        android:background="@drawable/my_button_bg"
        android:layout_alignBaseline="@+id/b5"
        android:layout_alignBottom="@+id/b5"
        android:layout_alignStart="@+id/b1" />




    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b5"
        android:textColor="#ffffff"
        android:background="@drawable/my_button_bg"
        android:layout_below="@+id/b1"
        android:layout_toEndOf="@+id/b1" />



    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/b5"
        android:layout_toEndOf="@+id/b2"
        android:textColor="#ffffff"
        android:background="@drawable/my_button_bg"
        android:id="@+id/b6" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b7"
        android:layout_below="@+id/b5"
        android:textColor="#ffffff"
        android:background="@drawable/my_button_bg"
        android:layout_alignStart="@+id/b4" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/b7"
        android:textColor="#ffffff"
        android:background="@drawable/my_button_bg"
        android:layout_toEndOf="@+id/b4"
        android:id="@+id/b8" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/b8"
        android:textColor="#ffffff"
        android:background="@drawable/my_button_bg"
        android:layout_toEndOf="@+id/b5"
        android:id="@+id/b9" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b7"
        android:layout_toStartOf="@+id/b8"
        android:layout_marginStart="-120dp"
        android:textColor="#ffffff"
        android:background="@drawable/my_button_bg"
        android:id="@+id/bDel" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bDel"
        android:layout_toEndOf="@+id/b7"
        android:textColor="#ffffff"
        android:background="@drawable/my_button_bg"
        android:id="@+id/b0" />

    <Button
        android:text="#"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b9"
        android:layout_toEndOf="@+id/b0"
        android:textColor="#ffffff"
        android:background="@drawable/my_button_bg"
        android:id="@+id/bHash" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b0"
        android:layout_toEndOf="@+id/bDel"
        android:textColor="#ffffff"
        android:background="@drawable/my_button_bg"
        android:id="@+id/bMinus" />



    <TextView
        android:text="Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:textSize="40dp"
        android:layout_marginLeft="-130dp"
        android:textStyle="normal|bold"
        android:fontFamily="@font/question_font"
        android:textColor="@color/question_guess_color"
        />

    <TextView
        android:text="=?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_answer"
        android:textSize="30sp"
        android:textColor="@color/user_answer_color"
        android:layout_marginStart="14dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/question"
        />


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/question"
        android:layout_below="@+id/original_answer"
        android:fontFamily="@font/timer_font"
        android:text="10 secs"
        android:textColor="@color/timer_color"
        android:textSize="40sp"
        android:textStyle="normal|bold" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/original_answer"
        android:textSize="30sp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="150dp"
        android:visibility="invisible"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:textColor="@color/score_label_color"
        android:textSize="30sp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp"
        android:text="Score:0"
        />



    <TextView
        android:text="Correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correct"
        android:textSize="35sp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="-130dp"
        android:fontFamily="@font/status_font"
        android:textColor="@color/correct_color"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/wrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/status_font"
        android:layout_marginLeft="80dp"
        android:text="Wrong"
        android:textColor="@color/wrong_color"
        android:textSize="35sp"
        android:visibility="invisible" />



    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_level"
        android:textSize="30sp"
        android:layout_marginTop="490dp"
        android:visibility="invisible"

        />

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hints"
        android:textSize="30sp"
        android:layout_marginLeft="-90dp"
        android:layout_marginTop="490dp"
        android:visibility="invisible"

        />

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bMinus"
        android:layout_toEndOf="@+id/b0"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        android:background="@color/button_start_color"
        android:id="@+id/start"

        />


</RelativeLayout>
